<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.r_k.intentservicebatterypercentage.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="194dp"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
           />
        
 /*  android:addStatesFromChildren="true"  // for getting view states like press,checked,selected from child view */
        
        <LinearLayout
            android:layout_marginTop="100dp"
            android:padding="10sp"                      
            android:addStatesFromChildren="true"                      
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Switch
                android:text="Enable battery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Batteryswitch"/>
            <TextView
                android:text="you will  see notification on status about battery percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
