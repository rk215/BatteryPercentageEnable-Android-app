<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.r_k.intentservicebatterypercentage.MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar"
        android:fontFamily="sans-serif-condensed"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="135dp"
            app:srcCompat="@drawable/logo"
            android:layout_marginTop="70sp"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
           />

        <LinearLayout
            android:layout_marginTop="100dp"
            android:padding="10sp"
            android:addStatesFromChildren="true"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Switch
                android:text="Enable battery percentage"
                android:fontFamily="sans-serif-condensed"
                android:switchPadding="5sp"
                android:textColor="@color/SwitchColor"
                android:textSize="20sp"
                android:padding="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Batteryswitch"/>
            <TextView
                android:layout_marginLeft="16sp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/text"
                android:textSize="15sp"
                android:text="you will  see notification on status about battery percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
